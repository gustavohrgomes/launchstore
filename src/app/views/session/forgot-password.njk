{% extends 'layout.njk' %}

{% block content %}

<section class="password container form">
  <form 
    method="POST" 
    action="/users/forgot-password"
  >

    <div class="header">
      <h3>Esqueceu sua senha?</h3>
    </div>

    <div class="fields">
      <div class="input-group">
        <label>E-mail</label>
        <input 
          type="email" 
          name="email"
          placeholder="Digite o e-mail cadastrado"
          value="{{ user.email }}"
          onblur="Validate.apply(this, 'isEmail')"
          required
        >
      </div>
    </div>

    <button class="button" type="submit">Recuperar senha</button>
  </form>
</section>

{% endblock content %}