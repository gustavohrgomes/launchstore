{% extends 'layout.njk' %}
{% import 'parts/card.njk' as card %}


{% block content %}
{% call card.render('Esqueceu sua senha?', 'password container') %}
  <form 
    method="POST"
    action="/users/forgot-password"
  >
    <div class="fields">
      <div class="input-group">
        <label>E-mail</label>
        <input 
          type="email" 
          name="email"
          placeholder="Digite o e-mail cadastrado"
          value="{{ user.email }}"
          onblur="Validate.apply(this, 'isEmail')"
          required
        >
      </div>
    </div>

    <button class="button" type="submit">Recuperar senha</button>
  </form>
</section>
{% endcall %}

{% endblock content %}