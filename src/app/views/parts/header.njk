<header>
  <div class="container">
    <a href="/">
      <div class="logo">
        <h1>Launchstore</h1>
        <h2>Compra e Venda</h2>
      </div>
    </a>

    <form 
      class="search" 
      method="GET" 
      action="/products/search"
    >
      <input 
        type="text"
        name="filter"
        placeholder="Buscar por Produtos"
        {% if search.term %}
          value="{{search.term}}"
        {% endif %}
      >
    </form>

    <nav class="primary">
      <ul>
        <li>
          <a href="/ads/create">
            <i class="material-icons">add</i>
            Novo An√∫ncio
          </a>
        </li>
        <li class="account">
          <a href="/accounts">
          {% if session.userId %}
            <i class="material-icons">account_circle</i>
            Minha Conta
          {% else %}
            <i class="material-icons">login</i>
            Entrar
          {% endif %}
          </a>
          {% if session.userId %}
          <ul class="submenu">
            <li>
              <a href="/users">Meus dados</a>
            </li>
            <li>
              <a href="/buying">Meus pedidos</a>
            </li>
            <li>
              <a href="/selling">Minha vendas</a>
            </li>
            <li>
              <form action="/users/logout" method="POST">
                <button class="logout">
                  <i class="material-icons">logout</i>
                  Sair
                </button>
              </form>
            </li>
          </ul>
          {% endif %}
        </li>
      </ul>
    </nav>
  </div>
</header>